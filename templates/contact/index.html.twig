{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center my-5">Formulaire de Contact</h2>

        <div class="form-group">
            <div class="input-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                </div>
                {{ form_widget(formView.firstName) }}
            </div>
        </div>

        <div class="form-group">
            <div class="input-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                </div>
                {{ form_widget(formView.lastName) }}
            </div>
        </div>

        <div class="form-group">
            <div class="input-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                </div>
                {{ form_widget(formView.email) }}
            </div>
        </div>

        <div class="form-group">
            <div class="input-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-phone"></i></span>
                </div>
                {{ form_widget(formView.phone) }}
            </div>
        </div>

        <div class="form-group">
            <div class="input-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="far fa-comment-dots"></i></span>
                </div>
                {{ form_widget(formView.message) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-5">Envoyez votre demande</button>

    </div>
{% endblock %}